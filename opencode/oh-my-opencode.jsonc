{
    "$schema": "https://raw.githubusercontent.com/code-yeongyu/oh-my-opencode/master/assets/oh-my-opencode.schema.json",
    "agents": {
        // Sisyphus - 主要编排器
        // 职责: 规划、委托和执行复杂任务，使用专业子代理进行激进的并行执行
        // 推荐模型: anthropic/claude-opus-4-5
        "sisyphus": {
            "model": "zhipuai-coding-plan/glm-4.7"
        },
        // Oracle - 战略顾问
        // 职责: 架构决策、代码审查、调试、复杂逻辑分析（只读）
        // 推荐模型: openai/gpt-5.2
        "oracle": {
            "model": "zhipuai-coding-plan/glm-4.7"
        },
        // Librarian - 文档研究员
        // 职责: 多仓库分析、文档查找、开源实现示例搜索（只读）
        // 推荐模型: zai-coding-plan/glm-4.7
        "librarian": {
            "model": "zhipuai-coding-plan/glm-4.7"
        },
        // Explore - 快速代码探索者
        // 职责: 快速代码库探索、上下文 grep、代码模式搜索（只读）
        // 推荐模型: anthropic/claude-haiku-4-5
        "explore": {
            "model": "zhipuai-coding-plan/glm-4.5-air"
        },
        // Multimodal-Looker - 多媒体分析师
        // 职责: 分析 PDF、图片、图表等视觉内容（仅 read）
        // 推荐模型: google/gemini-3-flash
        "multimodal-looker": {
            "model": "zhipuai-coding-plan/glm-4.6v"
        },
        // Prometheus - 战略规划师
        // 职责: 通过面试模式创建详细工作计划
        // 推荐模型: anthropic/claude-opus-4-5
        "prometheus": {
            "model": "zhipuai-coding-plan/glm-4.7"
        },
        // Metis - 预规划顾问
        // 职责: 识别隐藏意图、歧义和 AI 失败点
        // 推荐模型: anthropic/claude-opus-4-5
        "metis": {
            "model": "zhipuai-coding-plan/glm-4.7"
        },
        // Momus - 计划评审者
        // 职责: 验证计划的清晰度、可验证性和完整性
        // 推荐模型: openai/gpt-5.2
        "momus": {
            "model": "zhipuai-coding-plan/glm-4.7"
        },
        // Atlas - 主编排器
        // 职责: 管理 todo 列表和任务协调
        // 推荐模型: anthropic/claude-sonnet-4-5
        "atlas": {
            "model": "zhipuai-coding-plan/glm-4.7"
        },
        // Frontend-UI/UX-Engineer - 前端 UI/UX 工程师
        // 职责: 前端开发、UI/UX 设计、样式、动画
        // 推荐模型: google/gemini-3-pro
        "frontend-ui-ux-engineer": {
            "model": "zhipuai-coding-plan/glm-4.7"
        },
        // Document-Writer - 文档撰写者
        // 职责: 文档撰写、技术写作、说明文档
        // 推荐模型: google/gemini-3-flash
        "document-writer": {
            "model": "zhipuai-coding-plan/glm-4.5-air"
        }
    },
    // Background Task Configuration - 后台任务配置
    "background_task": {
        "defaultConcurrency": 10
    }
}